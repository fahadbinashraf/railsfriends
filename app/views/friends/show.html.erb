<div class="card">
  <div class="card-header">
    <h4> <%= @friend.first_name + ' ' + @friend.last_name %></h4>
  </div>
  <div class="card-body">
    <p  style="padding-top: 100px; 0 25px; 0"> <%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %> </p>

    <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-secondary" %>
    <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "bi-trash btn btn-danger" %> 
    <%= link_to 'Back', friends_path, class: "btn btn-dark" %>
  </div>
</div>

